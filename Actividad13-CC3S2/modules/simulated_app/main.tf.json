{
  "resource": [
    {
      "null_resource": [
        {
          "local_server": [
            {
              "triggers": {
                "name": "${var.name}",
                "network": "${var.network}",
                "port": "${var.port}"
              },
              "provisioner": [
                {
                  "local-exec": {
                    "command": "echo 'Arrancando servidor ${var.name} en red ${var.network} con puerto ${var.port}'"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
