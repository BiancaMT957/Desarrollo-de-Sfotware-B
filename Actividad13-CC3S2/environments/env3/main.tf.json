{
  "resource": {
    "null_resource": {
      "local_server": {
        "triggers": {
          "name": "${var.name}",
          "network": "${var.network}",
          "port": "${var.port}"
        },
        "provisioner": [
          {
            "local-exec": {
              "command": "echo 'Starting ${var.name} on port ${var.port} in network ${var.network}'"
            }
          }
        ]
      }
    }
  }
}